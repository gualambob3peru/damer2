<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_negocio"
    android:layout_margin="2dp"

    app:cardCornerRadius="5dp"
    app:cardElevation="6dp"
    app:contentPadding="2dp"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >


        <TextView
            android:id="@+id/card_negocio_tDescripcion"
            android:layout_width="0dp"
            android:layout_height="45dp"
            app:layout_constraintWidth_percent="0.68"

            android:background="@color/azul_2"
            android:text="NEGOCIO"
            android:paddingLeft="30dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingRight="30dp"
            android:textColor="@color/white"
            android:textSize="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </TextView>

        <Button
            android:id="@+id/card_negocio_btnVer"
            android:layout_width="0dp"
            android:layout_height="45dp"
            app:layout_constraintWidth_percent="0.3"

            android:layout_alignParentEnd="true"
            android:backgroundTint="@color/azul_1"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="ENVIAR"
            android:textSize="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/card_negocio_tDireccion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_marginTop="50dp"
            android:paddingLeft="30dp"
            android:paddingBottom="5dp"
            android:text="DIRECCION"
            android:textColor="@color/azul_1"
            android:textSize="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </TextView>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>
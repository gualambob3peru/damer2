<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_categoria"
    android:layout_margin="2dp"

    app:cardCornerRadius="5dp"
    app:cardElevation="6dp"
    app:contentPadding="2dp"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >


        <TextView
            android:id="@+id/card_categoria_tDescripcion"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:background="@color/azul_2"

            android:paddingLeft="30dp"
            android:paddingTop="10dp"
            android:paddingRight="30dp"
            android:paddingBottom="10dp"
            android:text="CATEGORIA"
            android:textColor="@color/white"
            android:textSize="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="1">

        </TextView>

        <TextView
            android:id="@+id/card_categoria_codigo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_marginTop="50dp"
            android:paddingLeft="30dp"
            android:paddingBottom="5dp"
            android:text="CODIGO"
            android:textColor="@color/azul_1"
            android:textSize="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </TextView>

        <Button
            android:id="@+id/categoria_btnExcluir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Excluir"
            app:layout_constraintEnd_toEndOf="@+id/card_categoria_tDescripcion"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/categoria_textoExcluido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="20dp"
            android:textColor="@color/white"
            android:background="@color/rojo_1"
            android:text=""
            app:layout_constraintEnd_toStartOf="@+id/categoria_btnExcluir"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>